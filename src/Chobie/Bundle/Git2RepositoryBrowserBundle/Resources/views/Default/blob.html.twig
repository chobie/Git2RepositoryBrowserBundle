{% extends 'ChobieGit2RepositoryBrowserBundle::layout.html.twig' %}
{% block container %}
<h1><a href="{{ path('ChobieGit2RepositoryBrowserBundle_tree_index',{ repository_name: repository_name, refs: refs }) }}">{{ repository_name }}</a></h1>


{% include "ChobieGit2RepositoryBrowserBundle::parts.tools_links.html.twig" %}
{% include "ChobieGit2RepositoryBrowserBundle::parts.commit_info.html.twig" with {'show_parents':false} %}

{% include "ChobieGit2RepositoryBrowserBundle::parts.breadcrumbs.html.twig" %}

<div style="text-align:right">
    <a href="{{ path("ChobieGit2RepositoryBrowserBundle_blame", {repository_name: repository_name, name: name}) }}">blame</a>
</div>
{% if is_image %}
<img src="{{ path("ChobieGit2RepositoryBrowserBundle_raw", {repository_name: repository_name, name: name, refs:refs}) }}" />
{% else %}
<pre>{{ data | raw }}</pre>
{% endif %}
{% endblock %}
